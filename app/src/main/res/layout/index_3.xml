<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chart1"
        android:paddingTop="5dp"
        android:background = "@drawable/shape"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="12.2"
            android:textSize="45dp"
            android:gravity="center_horizontal"
            android:id="@+id/avgConunt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingRight="40dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="깜빡임"
            android:textStyle="italic"
            android:paddingRight="0dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/avgConunt"
            android:textSize="15dp"
            android:paddingTop="7dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="30초 평균"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/avgConunt"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:paddingTop="10dp" />



    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/chart1"
        android:layout_alignParentEnd="true"
        android:background = "@drawable/shape"
        android:layout_marginRight="13dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="82.5"
            android:textSize="45dp"
            android:gravity="center_horizontal"
            android:id="@+id/successRate"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="%"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/successRate"
            android:textSize="15dp"
            android:paddingBottom="0dp"
            android:textStyle="italic"
            android:paddingTop="7dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="성공률"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/successRate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 7일간의 기록"
        android:id="@+id/textView13"
        android:textColor="#6B6B6B"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp" />

</RelativeLayout>
